<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/asphalt_road"
    tools:context="com.valjulshingmail.myapplication.MainActivity">

    <Button
        android:id="@+id/qupletech_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:background="@drawable/qupletech_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="36dp"
        android:layout_marginTop="26dp"
        app:layout_constraintHorizontal_bias="0.347" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginBottom="10dp"
        android:text="by Yuliya Shinkarenko"
        android:textStyle="italic"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997"
        app:layout_constraintHorizontal_bias="0.063"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="13dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_play"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.18"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/qupletech_logo"
        android:layout_alignStart="@+id/qupletech_logo"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/button_play"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/b4"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/button_play"
        app:layout_constraintHorizontal_bias="0.697"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.629"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="17dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_play"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignEnd="@+id/qupletech_logo"
        android:layout_alignBottom="@+id/b1"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.253" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="Song 1"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="35px"
        android:layout_below="@+id/b1"
        android:layout_alignEnd="@+id/b1"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.398"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song 2"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="35px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.417"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.717"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

     <TextView
         android:id="@+id/textView4"
         android:layout_width="72dp"
         android:layout_height="27dp"
         android:text="Song 3"
         android:textColor="@android:color/holo_orange_light"
         android:textSize="35px"
         android:textStyle="bold"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_alignParentTop="true"
         android:layout_alignParentStart="true"
         android:layout_marginBottom="101dp"
         app:layout_constraintTop_toTopOf="parent"
         android:layout_marginTop="8dp"
         app:layout_constraintVertical_bias="0.997"
         android:layout_marginRight="8dp"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_marginLeft="8dp"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintHorizontal_bias="0.182" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song 4"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="35px"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.717"
        android:layout_alignEnd="@+id/b2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="108dp" />
     </android.support.constraint.ConstraintLayout>

